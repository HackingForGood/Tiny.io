<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tab2text"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nutrition Fact: "
                android:textSize="24sp"
                android:textAllCaps="true"
                android:textStyle= "bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tab2fat"
                    android:paddingBottom="8dp"
                    android:paddingLeft="36sp"
                    android:paddingRight="8sp"
                    android:paddingTop="8sp"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:text="- Total Fat "
                    android:textSize="18sp"
                    android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/tab2fatdata"
                    android:text=" x "
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
                </LinearLayout>>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tab2cho"
                    android:paddingBottom="8sp"
                    android:paddingLeft="36sp"
                    android:paddingRight="8sp"
                    android:paddingTop="8sp"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:text="- Cholesterol "
                    android:textSize="18sp"
                    android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/tab2chodata"
                    android:text=" x "
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tab2sod"
                    android:paddingBottom="8sp"
                    android:paddingLeft="36sp"
                    android:paddingRight="8sp"
                    android:paddingTop="8sp"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:text="- Sodium "
                    android:textSize="18sp"
                    android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/tab2soddata"
                    android:text=" x "
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tab2pot"
                    android:paddingBottom="8sp"
                    android:paddingLeft="36sp"
                    android:paddingRight="8sp"
                    android:paddingTop="8sp"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:text="- Potassium "
                    android:textSize="18sp"
                    android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/tab2potdata"
                    android:text=" x "
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tab2car"
                    android:paddingBottom="8sp"
                    android:paddingLeft="36sp"
                    android:paddingRight="8sp"
                    android:paddingTop="8sp"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:text="- Total Carbohydrate "
                    android:textSize="18sp"
                    android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/tab2cardata"
                    android:text=" x "
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tab2pro"
                    android:paddingBottom="8sp"
                    android:paddingLeft="36sp"
                    android:paddingRight="8sp"
                    android:paddingTop="8sp"
                    android:layout_width="300sp"
                    android:layout_height="wrap_content"
                    android:text="- Protein "
                    android:textSize="18sp"
                    android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/tab2prodata"
                    android:text=" x "
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>>
        </LinearLayout>>

    </ScrollView>

</RelativeLayout>